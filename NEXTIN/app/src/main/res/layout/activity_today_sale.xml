<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkpurple"
    tools:context=".TodaySale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/dashboard"
            android:clickable="true"
            android:layout_width="390dp"
            android:layout_height="50dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/black"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="378dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:fontFamily="@font/opensans"
                android:gravity="center"
                android:text="PRODUCT'S"
                android:textColor="@color/gold"
                android:textSize="26sp" />

        </androidx.cardview.widget.CardView>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/tuborg"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="166dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/tuborg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="165dp"
                    android:fontFamily="@font/opensans"
                    android:text="TUBORG"
                    android:textColor="@color/gold"
                    android:textSize="25dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kingfisher"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="159dp"
                    android:layout_height="163dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/kingfisher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="165dp"
                    android:fontFamily="@font/opensans"
                    android:text="KINGFISHER"
                    android:textColor="@color/gold"
                    android:textSize="25dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crstrong"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="159dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/carlsbergstrong" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="175dp"
                    android:fontFamily="@font/opensans"
                    android:text="CARLSBERG STRONG"
                    android:textColor="@color/gold"
                    android:textSize="16dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crmild"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="171dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/carlsberg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="175dp"
                    android:fontFamily="@font/opensans"
                    android:text="CARLSBERG MILD"
                    android:textColor="@color/gold"
                    android:textSize="16dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/budwizer"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="159dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/budwiser" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="165dp"
                    android:fontFamily="@font/opensans"
                    android:text="BUDWISER"
                    android:textColor="@color/gold"
                    android:textSize="25dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tuborggreen"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="155dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/tuborggreen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="165dp"
                    android:fontFamily="@font/opensans"
                    android:text="TUBORG GREEN"
                    android:textColor="@color/gold"
                    android:textSize="20dp" />
            </androidx.cardview.widget.CardView>


        </GridLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/dash"
            android:clickable="true"
            android:layout_width="390dp"
            android:layout_height="50dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/gold"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="378dp"
                android:layout_height="match_parent"
                android:background="@color/gold"
                android:fontFamily="@font/opensans"
                android:gravity="center"
                android:text="PAYMENT DETAILES"
                android:id="@+id/payment"
                android:textColor="@color/black"
                android:textSize="26sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>