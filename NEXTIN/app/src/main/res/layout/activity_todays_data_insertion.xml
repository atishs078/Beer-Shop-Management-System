<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
android:background="@color/darkpurple"
tools:context=".TodaysDataInsertion">

<TextView
    android:id="@+id/textViewTodaySale"
    android:layout_width="392dp"
    android:layout_height="49dp"
    android:background="@color/black"
    android:gravity="center"
    android:text="Today's Sale"
    android:textColor="@color/gold"
    android:textSize="20sp"
    android:fontFamily="@font/opensans"/>

<EditText
    android:id="@+id/editTextProduct1"
    android:layout_width="382dp"
    android:layout_height="48dp"
    android:layout_below="@id/textViewTodaySale"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:editable="false"
    android:background="@color/white"
    android:hint="Name Of Product" />

<EditText
    android:id="@+id/editTextProduct2"
    android:layout_width="382dp"
    android:layout_height="48dp"
    android:layout_below="@id/editTextProduct1"
    android:layout_marginBottom="20dp"
    android:background="@color/white"
    android:inputType="number"
    android:hint="Number Of Bottle" />

<EditText
    android:id="@+id/editTextProduct3"
    android:layout_width="382dp"
    android:layout_height="48dp"
    android:layout_below="@id/editTextProduct2"
    android:layout_marginBottom="20dp"
    android:background="@color/white"
    android:inputType="number"
    android:hint="Rate Of Bottle" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextProduct3"
        android:id="@+id/dropdown_menu"

        >

        <!-- Inside text input layout add
              an auto complete text view
                and make its input type to none-->
        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_weight="1"
            android:inputType="none"
            android:text="Choose Quantity"
            />

    </com.google.android.material.textfield.TextInputLayout>

<Button
    android:id="@+id/buttonSubmit"
    android:layout_width="208dp"
    android:layout_height="69dp"
    android:layout_below="@id/dropdown_menu"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:backgroundTint="@color/gold"
    android:text="submit"
    android:textColor="@color/black"
    android:textSize="20dp"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>